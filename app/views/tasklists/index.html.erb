
<h2>Task Lists</h2>
<%= button_to "Create", new_tasklist_path, method: :get, class: "btn btn-default" %>
<%= button_to "Archived Tasklists", tasklists_archived_path, method: :get, class: "btn btn-default" %>
<table>
  <thead><tr><th>Title</th><th></th><th></th></tr></thead>
  <tbody>
    <% @tasklists.each do |tasklist| %>
      <tr>
        <td><%= link_to tasklist.title, tasklist_path(tasklist) %></td>
        <td><%= button_to "Rename", edit_tasklist_path(tasklist), method: :get %></td>
        <td><%= button_to "Archive", archived_tasklist_path(tasklist)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
