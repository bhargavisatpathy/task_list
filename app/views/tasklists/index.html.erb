<div><%= button_to "Create Tasklist", new_tasklist_path, method: :get, class: "btn btn-default" %></div>
<div><%= button_to "Archived Tasklist", tasklists_archived_path, method: :get, class: "btn btn-default" %></div>

<h2>Task Lists</h2>

<% @tasklists.each do |tasklist| %>
  <div class="task-list">
    Title <%= link_to tasklist.title, tasklist_path(tasklist) %>
    No of tasks <%= tasklist.tasks.count %>

    <%= button_to "Rename Tasklist", edit_tasklist_path(tasklist), method: :get %>
    <%= button_to "Archive", archived_tasklist_path(tasklist)%>
  </div>
<% end %>
